<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark" style="margin-top: -50px;">
        <div class="container">
            @Html.ActionLink("Simple Starting Sample", "ListStudents", "Student", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">List of Students</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Html.ActionLink("Simple Starting Sample", "ListStudents", "Student", new { area = "" }, new { @class = "navbar-brand" })">Complete List of People</a></li>
                            <li><a class="dropdown-item" href="~/HTML/HtmlPageNyiko.html">Nyiko Mbhalati</a></li>
                            <li><a class="dropdown-item" href="~/HTML/HtmlPageMichael.html">Michael Neto</a></li>
                            <li><a class="dropdown-item" href="~/HTML/HtmlPageBusi.html">Busi Paul</a></li>
                            <li><a class="dropdown-item" href="~/HTML/HtmlPageNaledi.html">Naledi Nkwana</a></li>
                            <li><a class="dropdown-item" href="~/HTML/HtmlPageThato.html">Thato Modise</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
